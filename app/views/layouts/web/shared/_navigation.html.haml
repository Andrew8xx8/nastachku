.navbar
  .navbar-inner
    .container
      %a.btn.btn-navbar{ class: "btn btn-navbar",  :'data-toggle' => "collapse",  :'data-target' => ".nav-collapse" }
        %span Menu

      .nav-collapse.collapse
        %ul.nav
          - unless signed_in?
            %li= link_to t(".i_will_go"), new_user_path

          %li= navbar_link t(".participants"), users_path, with: User.shown_as_participants.count

          - if signed_in?
            %li= link_to current_user.full_name, edit_account_account_path(current_user)
            %li= link_to t('.logout'), session_path, method: :delete

          - else
            %li= link_to t(".login"), new_session_path

          - if signed_as_admin?
            %li= link_to t(".admin"), admin_root_path
