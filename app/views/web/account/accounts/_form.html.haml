= simple_form_for @user, :url => account_account_path(@user), :html => { :class => 'form-horizontal' } do |f|

  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.input :name
  = f.input :city
  = f.input :company
  = f.input :show_as_participant
  = f.input :position

  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
