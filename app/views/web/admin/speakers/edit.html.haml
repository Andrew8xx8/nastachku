.page-header
  %h1=t '.title'

= link_to t('.to_member'), edit_admin_member_path(@speaker), :class => 'btn'

= simple_form_for @speaker.becomes(SpeakerEditType), url: admin_speaker_path, method: :put, html: { class: 'form-horizontal' } do |f|
  .row
    .span4
      = f.input :state_event, :as => :state_event
      = f.input :name
      = f.input :type, as: :hidden
      = f.input :city
    .span4
      = f.input :company
      = f.input :position
      = f.input :show_as_participant
      = f.input :email
    .span4
      = f.input :photo, as: :image_preview

  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to t('.cancel'), admin_users_path, :class => 'btn'