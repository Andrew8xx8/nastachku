- model_class = Page
.page-header
  %h1=t '.title'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:slug)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions'
  %tbody
    - @pages.each do |page|
      %tr
        %td= link_to page.slug, admin_page_path(page)
        %td= page.title
        %td= page.body
        %td= page.created_at
        %td
          = link_to t('.edit'), edit_admin_page_path(page), :class => 'btn btn-mini'
          = link_to t('.destroy'), admin_page_path(page), :method => :delete, :data => { :confirm => t('.confirm') }, :class => 'btn btn-mini btn-danger'

= link_to t('.new'), new_admin_page_path, :class => 'btn btn-primary'
